doctype html
//- Import mixins here to use globally
include ../../_includes/mixins/mixins.pug
html(lang='en-us' class='antialiased overflow-y-scroll')
	head
		//- Meta Tags
		title #{siteAttributes[page.fileSlug] ? siteAttributes[page.fileSlug].metaTitle : site.metaTitle }
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(
			name='description',
			content=siteAttributes[page.fileSlug] ? siteAttributes[page.fileSlug].metaDescription : site.metaTitle
		)
		meta(name='author', content=site.author)
		link(rel='canonical', href=site.url + page.url)
		//- <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
		link(rel='stylesheet', href=manifest["main.css"])

	include ../sprites/sprites.svg

- var bodyClass = siteAttributes[page.fileSlug] ? siteAttributes[page.fileSlug].bodyClass : "";
	body(class=bodyClass)
		a(class="sr-only" href="#main") Skip to content
		include ../partials/header.pug
		div.flex.flex-col.min-h-screen
			include ../partials/main.pug
				block content
			include ../partials/footer.pug
